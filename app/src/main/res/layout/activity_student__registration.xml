<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginBottom="60dp"
        >
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:textColor="#000000"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/logo"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp"
            android:layout_marginStart="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="@string/displayName"
            android:textColor="#950404"
            android:textSize="18sp"
            android:textStyle="italic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"
        android:padding="10dp"
        android:layout_margin="15dp"
        android:background="@drawable/linearlayoutbackbor"
        android:isScrollContainer="true"
        >
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            app:lottie_rawRes="@raw/registration"
            app:lottie_autoPlay="true"
            android:layout_marginBottom="3dp"
            app:lottie_loop="true"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/byTeacher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?attr/materialButtonStyle"
            android:text="REFERRED BY TEACHER"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/orderby"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/byOwn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?attr/materialButtonStyle"
            android:text="FOR GENERAL QUERIES"
            android:drawableLeft="@drawable/orderless"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/readMe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?attr/materialButtonStyle"
            android:text="READ ME!"
            android:drawableLeft="@drawable/helpsection"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="15dp"
            android:layout_marginTop="10dp"
            >

        </LinearLayout>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:text="POWEREDBY"
            style="?attr/materialThemeOverlay"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginTop="50dp"
            android:textColor="#00838F"/>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:text="Krypto Developers Pvt. Ltd."
            style="?attr/materialThemeOverlay"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#041067"/>
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/logo"
            android:layout_gravity="center"
            />
    </LinearLayout>

</LinearLayout>